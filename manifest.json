{
  "description": "Remove history&downloads!",
  "manifest_version": 2,
  "name": "Remove history&downloads!",
  "version": "1.0",
  "homepage_url": "https://github.com/ArthurSoftvision1/removeHistory-Downloads",
  "icons": {
    "48": "icons/delete.png"
  },

  "options_ui": {
    "page": "options/index.html"
  },

  "browser_action": {
    "default_icon": "icons/delete.png",
    "default_title": "Remove history&downloads!"
  },

  "background": {
    "scripts": ["background-scripts/background.js"]
  },

  "permissions": [
    "browsingData",
    "notifications",
    "storage"
  ]
}
